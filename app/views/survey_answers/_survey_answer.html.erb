<div id="<%= dom_id survey_answer %>" class="md-4 rounded-3xl border-black-900 border-solid">
  <p class="my-5 py-1 px-2 inline-block rounded bg-<%= survey_answer.answer ? "blue" : "red" %>-700 text-white block">
    <%= humanize_boolean(survey_answer.answer) %>
  </p>

  <p class="my-5 px-5 inline-block">
    Answered By: <%= survey_answer.user.email %>
  </p>
</div>
